<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="10dp"
    android:background="@drawable/dialog_arkasi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/baslik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Başlık"
            android:textColor="@color/sari"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:id="@+id/aciklama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Yeterli KP'niz bulunmamaktadır. Marketten KP alabilirsiniz."
            android:textColor="@color/siyah"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18sp"
            android:gravity="center"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginHorizontal="10dp"
        android:padding="7dp">
        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:hint="Kullanıcı Adı"
            android:textColorHint="@color/gri3"
            android:textColor="@color/siyah"
            android:textSize="15sp"
            android:background="@drawable/normal_beyaz_buton"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="30dp"/>
    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp">
        <Button
            android:id="@+id/buton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/normal_beyaz_buton"
            android:text="markete git"
            android:textColor="@color/siyah"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

</LinearLayout>