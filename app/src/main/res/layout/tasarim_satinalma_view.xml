<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/arkaplan"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginHorizontal="5dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/tasarim_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/gradient_yumusak_her_yer">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tik"
            android:id="@+id/tik"
            android:visibility="gone"
            android:layout_margin="10dp"/>
        <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/market_ic"
            android:layout_marginVertical="5dp"
            android:id="@+id/satinAl"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/tas2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <ImageView
                        android:id="@+id/para_ic"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/kp_icon" />

                    <TextView
                        android:id="@+id/tasarim_degeri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/para_ic"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="13sp"
                        android:gravity="center"
                        android:text="10"
                        android:textAlignment="textStart"
                        android:textColor="@color/sari"
                        android:textSize="13sp"
                        tools:ignore="RtlCompat" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>