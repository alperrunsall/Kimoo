<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/arka_beyaz_yumusak">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FİLTRELE"
            android:id="@+id/filtrele_yazi_baslik"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filtre_menu"
        android:layout_alignParentBottom="true"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/filtre_yazi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cinsiyet"
                    android:textColor="@color/colorAccent"/>

                <Spinner
                    android:id="@+id/filtrele_cinsiyet_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filtre_yazi1"
                    android:layout_marginLeft="-13dp"
                    android:layout_marginTop="8dp"
                    android:entries="@array/spinn_filtre_cinsiyet"
                    android:padding="5dp" />

            </RelativeLayout>
            <RelativeLayout
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/filtre_yazi3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Premium"
                    android:textColor="@color/colorAccent"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/filtre_yazi3"
                    android:layout_centerVertical="true"
                    android:id="@+id/filtrele_premium"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yaş Aralığı"
                    android:id="@+id/filtrele_yazi2"
                    android:textColor="@color/colorAccent"/>
                <EditText
                    android:id="@+id/filtrele_yas_enaz"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filtrele_yazi2"
                    android:layout_alignParentStart="true"
                    android:inputType="number"
                    android:hint="En az"/>
                <EditText
                    android:id="@+id/filtrele_yas_encok"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filtrele_yas_enaz"
                    android:inputType="number"
                    android:hint="En çok" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <Button
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:padding="3dp"
                android:id="@+id/filtrele_filtrele_btn"
                android:text="Filtrele"
                android:textColor="@color/colorPrimary"/>
            <Button
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:padding="3dp"
                android:id="@+id/filtrele_sifirla_btn"
                android:text="Sıfırla"
                android:textColor="@color/colorPrimary"/>
            <Button
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:padding="3dp"
                android:id="@+id/filtrele_iptal_et_btn"
                android:text="Filtreyi Durdur"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>





    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>