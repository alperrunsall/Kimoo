<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/dialog_arka">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/isim"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Espark"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="25sp"/>
            <TextView
                android:visibility="invisible"
                android:id="@+id/isletme_aciklamasi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/gri3"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="15sp"
                android:gravity="center"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="LÜTFEN HANGİ SAATLER ARASINDA GİDECEĞİNİZİ SEÇİN"
                android:textColor="@color/siyah"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="14sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="12sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:padding="20dp"
            android:background="@drawable/golge_onu2">
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/pbar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:text="(Konuma yaklaştığınızda kullanıcıları bulma özelliğinizin çalışıyor olması gerekmektedir.) Not: Ziyaretiniz algılanamama ihtimali vardır."
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="13sp"
                android:gravity="center"
                android:textSize="12sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
                <Button
                    android:id="@+id/geri_gel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/siyah"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15sp"
                    android:layout_marginVertical="2dp"
                    android:background="@drawable/normal_beyaz_buton"
                    android:text="GERİ GEL"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
                <Button
                    android:id="@+id/saati_sec_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/siyah"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="15sp"
                    android:layout_marginVertical="2dp"
                    android:background="@drawable/normal_beyaz_buton"
                    android:text=""/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"/>

    </LinearLayout>


</LinearLayout>