<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARKAPLANDA BULUNANLAR"
        android:id="@+id/text1"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:paddingTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aşağıdaki kullanıcılar 'TÜM BULDUKLARIM' kısmına eklenmiştir."
        android:layout_centerHorizontal="true"
        android:textSize="13sp"
        android:textColor="@color/gri3"
        android:id="@+id/text2"
        android:layout_below="@id/text1"
        android:paddingTop="5dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recylerView"
        android:layout_height="500dp"
        android:layout_below="@id/text2"
        android:background="@drawable/normal_arka_et"
        android:padding="40dp"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tüm Bulunanlar: 5      Geçersiz: 3      Geçerli: 2"
        android:layout_centerHorizontal="true"
        android:textSize="13sp"
        android:textColor="@color/gri3"
        android:id="@+id/text3"
        android:layout_marginTop="-10dp"
        android:layout_below="@id/recylerView"/>

</RelativeLayout>
</LinearLayout>