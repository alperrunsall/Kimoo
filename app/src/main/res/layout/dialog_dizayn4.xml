<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:padding="10dp"
    android:background="@drawable/dialog_arkasi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/baslik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ARKAPLANDA BUL"
            android:textColor="@color/sari"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:id="@+id/aciklama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Diğer Kimoo kullanıcılarını arkaplanda bulmak ister misiniz? Siz kapatana kadar arkaplanda aramaya devam eder ve internetinizi kapatsanız bile kullanıcıları bulur.
Bulunan kullanıcıları tespit edebilmeniz için 5 gün içerisinde internete bağlanmanız ve ''Bulduklarım'' sayfasına girmeniz gerekir."
            android:textColor="@color/siyah"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18sp"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_marginHorizontal="10dp">
        <Button
            android:id="@+id/buton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/normal_beyaz_buton"
            android:textColorHint="@color/gri3"
            android:textColor="@color/siyah"
            android:text="ARKAPLANDA BUL"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <TextView
        android:id="@+id/aciklama2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="YA DA UYGULAMA İÇİNDE ANLIK OLARAK BUL"
        android:textColor="@color/sari"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="15sp"
        android:gravity="center"
        android:textAlignment="center"
        tools:ignore="RtlCompat" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_marginHorizontal="10dp">
        <Button
            android:id="@+id/buton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColorHint="@color/gri3"
            android:textColor="@color/siyah"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/normal_beyaz_buton"
            android:text="ANLIK OLARAK BUL"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>
</LinearLayout>