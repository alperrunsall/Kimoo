<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/beyaz"
        android:layout_marginBottom="10dp"
        android:background="@drawable/arka_dark"
        android:padding="10dp"
        android:fontFamily="@font/coolvetica"
        android:autoSizeMaxTextSize="17sp"
        android:autoSizeTextType="uniform"
        android:visibility="gone"
        android:id="@+id/ne_zaman_atilmis"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/ne_zaman_atilmis"
            android:layout_height="wrap_content"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:id="@+id/rel1">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/coolvetica"
                            android:textSize="18sp"
                            android:autoSizeMaxTextSize="17sp"
                            android:autoSizeTextType="uniform"
                            android:textColor="@color/beyaz"
                            android:id="@+id/mesaj_goster"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="13dp"
                            android:background="@drawable/mesaj_sol"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mesajinsaati"
                            android:textSize="10sp"
                            android:fontFamily="@font/coolvetica"
                            android:textColor="@color/colorPrimaryDark"
                            android:visibility="gone"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@id/mesaj_goster"
                            android:paddingHorizontal="5dp"/>
                        <TextView
                            android:id="@+id/bu_mesaj_silindi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/normal_arka2_beyaz"
                            android:padding="10dp"
                            android:fontFamily="@font/coolvetica"
                            android:autoSizeMaxTextSize="17sp"
                            android:autoSizeTextType="uniform"
                            android:visibility="gone"
                            android:text="Bu mesaj silinmiÅŸtir."
                            android:textColor="@color/beyaz"
                            android:textSize="18sp"
                            android:textStyle="bold|italic" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/goruldu"
                    android:fontFamily="@font/coolvetica"
                    android:autoSizeMaxTextSize="17sp"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/gri2"
                    android:visibility="gone"
                    android:layout_below="@id/bu_mesaj_silindi"/>
            </LinearLayout>




</RelativeLayout>
</RelativeLayout>