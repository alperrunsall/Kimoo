<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:id="@+id/background"
xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:visibility="visible"
        android:id="@+id/pbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:id="@+id/anaLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/kapak"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/siyah"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2">
                            <androidx.appcompat.widget.Toolbar
                                android:id="@+id/pprofiltoolbar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:elevation="0dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:id="@+id/isim_soyisim"
                                    android:text=""
                                    android:textSize="16sp"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMaxTextSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/beyaz"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"/>
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8">
                                    <ImageView
                                        android:id="@+id/dprofil_favori_btn"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginRight="15dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_profil_favori_erkek_bos" />
                                    <ImageView
                                        android:visibility="gone"
                                        android:id="@+id/dprofil_favori_btn2"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginRight="15dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_profil_favori_erkek_dolu"/>
                                </RelativeLayout>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/filter_yumusak_dikdortgen"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <View
                                android:id="@+id/kaybolacakView1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <RelativeLayout
                                android:id="@+id/kaybolacakView2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/yas_arka"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@color/favori_arka"/>

                                <TextView
                                    android:id="@+id/yas"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:autoSizeMaxTextSize="15sp"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:text="22"
                                    android:textAlignment="center"
                                    android:textColor="@color/beyaz" />
                            </RelativeLayout>
                            <View
                                android:id="@+id/kaybolacakView3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"/>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profil_pp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_weight="2.5"
                                android:src="@color/siyah"
                                app:civ_border_color="@color/beyaz"
                                app:civ_border_width="3dp" />
                            <View
                                android:id="@+id/kaybolacakView4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"/>
                            <RelativeLayout
                                android:id="@+id/kaybolacakView5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <ImageView
                                    android:id="@+id/cinsiyet_arka2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/female2" />
                                <ImageView
                                    android:id="@+id/cinsiyet_arka"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="gone"
                                    android:src="@drawable/male2"/>
                            </RelativeLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/gorunecekView1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:layout_marginVertical="10dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/admin_ic"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.3"
                                    android:src="@drawable/admin_ic"/>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/premium_arka_sari">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Uygulama Yöneticisi"
                                        android:textAlignment="center"
                                        android:gravity="center"
                                        android:autoSizeTextType="uniform"
                                        android:autoSizeMaxTextSize="15sp"
                                        android:layout_marginHorizontal="5dp"
                                        android:textColor="@color/siyah"/>
                                </RelativeLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"/>
                            </LinearLayout>
                            <View
                                android:visibility="gone"
                                android:id="@+id/gorunecekView2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"/>
                            <View
                                android:id="@+id/kaybolacakView6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:background="@drawable/filter_yumusak_dikdortgen_ters">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:id="@+id/foto_layout">

                    <ImageView
                        android:id="@+id/rozet_view_arka"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/prel5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="30dp">
                                <ImageView
                                    android:id="@+id/profil_foto_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@color/arka" />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                app:cardElevation="0dp"
                                android:layout_marginHorizontal="10dp"
                                app:cardCornerRadius="30dp">
                                <ImageView
                                    android:id="@+id/profil_foto_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@color/arka" />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="30dp">
                                <ImageView
                                    android:id="@+id/profil_foto_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@color/arka" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/prel6"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_below="@id/prel5"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="30dp">
                                <ImageView
                                    android:id="@+id/profil_foto_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@color/arka" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="10dp"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="30dp">
                                <ImageView
                                    android:id="@+id/profil_foto_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@color/arka" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="30dp">
                                <ImageView
                                    android:id="@+id/profil_foto_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@color/arka" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bu kullanıcının hiç fotoğrafı yok."
                        android:textColor="#AAA5A5"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/phic_foto_yok"
                        android:textSize="20sp"
                        android:visibility="gone"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/encokbegenenkismi"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/bos_foto"
                            android:id="@+id/encokbegenenfoto"
                            android:layout_alignParentTop="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/encokbegenensayisi"
                            android:layout_toRightOf="@id/encokbegenenfoto"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:textColor="@color/favori_arka"
                            android:layout_alignParentTop="true"
                            android:textSize="10sp"
                            android:text="x3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/encokbegenenyazi"
                            android:layout_toRightOf="@id/encokbegenensayisi"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:textColor="@color/favori_arka"
                            android:layout_alignParentTop="true"
                            android:textSize="10sp"
                            android:text="En çok beğenen"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:background="@drawable/anasayfa_tara_btn"
                android:drawableLeft="@drawable/ic_profil_begen1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeTextType="uniform"
                android:id="@+id/begen_btn"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:drawablePadding="-5dip"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:textSize="10sp"
                android:textColor="@color/siyah"
                android:textAllCaps="false"
                android:text="Beğen"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/kalpicon"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_profil_begeni_erkek"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/kalpicon"
                    android:text="0"
                    android:id="@+id/toplambegenisayisi"
                    android:layout_marginTop="-15dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/beyaz"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <Button
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:background="@drawable/anasayfa_tara_btn"
                android:id="@+id/mesaj_at_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeTextType="uniform"
                android:drawableLeft="@drawable/kilit_ic"
                android:drawablePadding="-5dip"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:textSize="10sp"
                android:textColor="@color/siyah"
                android:textAllCaps="false"
                android:text="Mesaj At"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>