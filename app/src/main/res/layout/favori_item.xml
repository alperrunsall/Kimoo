<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="15dp">
    <LinearLayout
        android:id="@+id/background"
        android:background="@drawable/normal_gorunum_arka2"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rozetKismi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3">
            <ImageView
                android:id="@+id/rozet"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6">

            <ProgressBar
                android:id="@+id/pbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:visibility="gone"
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/beyaz"
                android:src="@color/gri2" />
        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.6">

            <TextView
                android:id="@+id/isim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/beyaz"
                android:textSize="12sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/yeni_yazisi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="YENÄ°!"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:textSize="8sp"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/beyaz"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        tools:ignore="RtlCompat" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:visibility="invisible"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:id="@+id/yas_icon"
                            android:src="@drawable/yas_icon"/>
                        <TextView
                            android:visibility="invisible"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textStyle="bold|italic"
                            android:textColor="@color/beyaz"
                            android:id="@+id/yas"/>
                        <ImageView
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:id="@+id/karsilasma_icon"
                            android:src="@drawable/ic_karsilasma_konum"/>
                        <TextView
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:textSize="10sp"
                            android:textAlignment="textStart"
                            android:gravity="center"
                            android:textStyle="bold|italic"
                            android:textColor="@color/beyaz"
                            android:id="@+id/karsilasma_sayisi"
                            tools:ignore="RtlCompat" />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:id="@+id/begeni_icon"
                            android:src="@drawable/ic_profil_begen_kirmizi"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textStyle="bold|italic"
                            android:textColor="@color/beyaz"
                            android:id="@+id/begeni_sayisi_ulist"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:id="@+id/favori"
                            android:src="@drawable/favoriler_dolu"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>