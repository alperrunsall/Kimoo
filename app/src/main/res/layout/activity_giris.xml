<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/beyaz"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/background"
    tools:context=".GirisActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@drawable/kimoo_yazi" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.1"
        android:orientation="vertical"
        android:background="@drawable/filter_yumusak_dikdortgen">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5"
            android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:text="Giriş Yap"
                        android:textAlignment="center"
                        android:textColor="@color/siyah"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/girisMail"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/normal_arka_et"
                        android:drawableLeft="@drawable/ic_mail"
                        android:ems="10"
                        android:hint="Mail"
                        android:inputType="textEmailAddress"
                        android:paddingHorizontal="30dp"
                        android:textAlignment="center"
                        android:textColor="@color/siyah"
                        android:textColorHint="@color/gri3"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/girisSifre"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/normal_arka_et"
                        android:drawableLeft="@drawable/kilit_ic"
                        android:ems="10"
                        android:hint="Şifre"
                        android:inputType="textPassword"
                        android:paddingHorizontal="33dp"
                        android:textAlignment="center"
                        android:textColor="@color/siyah"
                        android:textColorHint="@color/gri3"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/sifreniMiUnuttun"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="Şifreni mi unuttun?"
                        android:textAlignment="center"
                        android:textColor="@color/gri3"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/girisGirisYapBTN"
                                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="70dp"
                                android:layout_marginVertical="15dp"
                                android:background="@drawable/kayit_button"
                                android:text="Giriş Yap"
                                android:textAllCaps="false"
                                android:textColor="@color/beyaz" />
                        </RelativeLayout>
                        <Button
                            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/kayit_button"
                            android:text="Yeni Hesap Aç"
                            android:textAllCaps="false"
                            android:layout_marginHorizontal="100dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/beyaz"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"/>
                    </LinearLayout>

                </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/gri">
            <TextView
                android:id="@+id/sartlar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="Kullanım Şartları"
                android:textColor="@color/gri3"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/sozlesme"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="Gizlilik Sözleşmesi"
                android:textColor="@color/gri3"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/sss"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="SSS"
                android:textColor="@color/gri3"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>




</LinearLayout>