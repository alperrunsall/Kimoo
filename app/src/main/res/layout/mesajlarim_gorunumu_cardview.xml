<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:elevation="0dp"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:id="@+id/anaLay"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/resim"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@color/gri2" />

            <ImageView
                android:id="@+id/yuvarlak"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="8dp"
                android:src="@drawable/yuvarlak_kirmizi"
                android:visibility="gone" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_alt_kisim"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/normal_gorunum_arka"
            android:layout_below="@id/rel2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/okundu"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_toRightOf="@id/son_mesaj"
                    android:layout_below="@id/kullanici_adi"
                    android:visibility="gone"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/isaret1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:id="@+id/kullanici_adi"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/beyaz"
                    android:textSize="7sp"
                    android:text=""/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/son_mesaj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/kullanici_adi"
                    android:paddingHorizontal="3dp"
                    android:text="sadasd"
                    android:textAlignment="center"
                    android:textColor="@color/beyaz"
                    android:textSize="9sp" />

                <RelativeLayout
                    android:id="@+id/kilitRel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/kilit" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:id="@+id/son_mesaj_silindi"
                    android:layout_below="@id/kullanici_adi"
                    android:textColor="@color/siyah"
                    android:textSize="7sp"
                    android:visibility="gone"
                    android:textStyle="italic"
                    android:text="BU MESAJ SİLİNMİŞTİR"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:id="@+id/pbar"/>
</androidx.cardview.widget.CardView>