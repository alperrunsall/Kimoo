<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_marginHorizontal="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:id="@+id/konum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/isim"
                android:text=""
                android:textAlignment="textStart"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="10sp"
                android:textColor="@color/beyaz"
                tools:ignore="RtlCompat" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="invisible"
            android:id="@+id/resimler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/kisiler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/gelenArk3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="-5dp"
                    android:layout_toLeftOf="@id/gelenArk2"
                    android:src="@color/siyah"
                    app:civ_border_color="@color/beyaz" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/gelenArk2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="-5dp"
                    android:layout_toLeftOf="@id/gelenArk1"
                    android:src="@color/siyah"
                    app:civ_border_color="@color/beyaz" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/gelenArk1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="1dp"
                    android:src="@color/siyah"
                    app:civ_border_color="@color/beyaz" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="7sp"
                android:layout_below="@id/kisiler"
                android:textAlignment="textEnd"
                android:layout_alignParentEnd="true"
                android:textColor="@color/beyaz"
                android:id="@+id/ekstra_gelenler" />
        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"/>
                    <RelativeLayout
                        android:id="@+id/git"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/anasayfa_tara_btn"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/git_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Git"
                            android:textAlignment="center"
                            android:fontFamily="@font/coolvetica"
                            android:textColor="@color/siyah"
                            android:textSize="10sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
    </LinearLayout>




</RelativeLayout>