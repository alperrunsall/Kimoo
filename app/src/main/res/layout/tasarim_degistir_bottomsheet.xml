<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet_arkasi"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/para_ic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/kimoo_point" />

                <TextView
                    android:id="@+id/toplam_kp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:autoSizeTextType="uniform"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/para_ic"
                    android:text="10"
                    android:textAlignment="center"
                    android:textColor="@color/siyah"
                    android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6">

                    <TextView
                        android:id="@+id/baslik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Profil Tasarımı Değiştir"
                        android:textAlignment="center"
                        android:textColor="@color/sari"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/yazi_aciklama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/baslik"
                        android:gravity="center"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="15sp"
                        android:text="Bu tasarımı diğer kullanıcılar görebilir."
                        android:textAlignment="center"
                        android:textColor="@color/gri3"
                        android:textSize="15sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tasarimRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="7dp"
            android:overScrollMode="never"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:text="ÖNİZLEME"
            android:textColor="@color/siyah"
            android:textSize="15sp"
            android:autoSizeMaxTextSize="15sp"
            android:textAlignment="center"
            android:autoSizeTextType="uniform"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:background="@color/siyah"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/tasArayuzOnizleme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/gradient">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@drawable/kimoo_yazi" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/filter_yumusak_dikdortgen"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/tasMesajOnizleme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <RelativeLayout
                        android:id="@+id/ustMesaj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:focusable="true">
                        <TextView
                            android:id="@+id/mesaj1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selam :)"
                            android:textSize="18sp"
                            android:textColor="@color/beyaz"
                            android:padding="10dp"
                            android:background="@drawable/normal_arka2_beyaz"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_below="@id/ustMesaj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:focusable="true">
                        <TextView
                            android:id="@+id/mesaj2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/normal_arka_beyaz2"
                            android:text="Merhaba!"
                            android:layout_alignParentEnd="true"
                            android:textSize="18sp"
                            android:textColor="@color/beyaz"
                            android:padding="10dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/tasProfilOnizleme"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/ustRel"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:id="@+id/liste_gorunumu"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/liste_gorunumu"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:id="@+id/kart_gorunumu"
                        android:layout_toRightOf="@id/liste_gorunumu"
                        android:src="@drawable/kart_gorunumu"/>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardList"
                    android:layout_below="@id/ustRel"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginVertical="4dp"
                    android:layout_marginHorizontal="15dp">
                    <LinearLayout
                        android:id="@+id/background"
                        android:background="@drawable/normal_gorunum_arka2"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@+id/rozet"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:layout_margin="5dp"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/profile_image"
                                android:src="@mipmap/ic_launcher" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.6">

                            <TextView
                                android:id="@+id/isim"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/beyaz"
                                android:textSize="12sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.9">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.4"
                                    android:orientation="vertical">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:visibility="invisible"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.2"
                                            android:id="@+id/karsilasma_icon"
                                            android:src="@drawable/ic_karsilasma_konum"/>
                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.2"
                                            android:id="@+id/begeni_icon"
                                            android:src="@drawable/ic_profil_begen_kirmizi"/>
                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.2"
                                            android:id="@+id/favori"
                                            android:src="@drawable/favoriler_dolu"/>
                                    </LinearLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"/>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_width="80dp"
                    android:id="@+id/cardCard"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:id="@+id/rel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:id="@+id/rel2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/resim"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop"/>
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/rozet2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:padding="5dp" />
                            <ImageView
                                android:id="@+id/favori2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentEnd="true"
                                android:padding="5dp"
                                android:src="@drawable/favoriler_dolu" />
                            <RelativeLayout
                                android:id="@+id/yeni_kismi"
                                android:layout_width="40dp"
                                android:layout_height="15dp"
                                android:visibility="gone"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="5dp">
                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/gradient_gercek_siyah" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rel_alt_kisim"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="-40dp"
                            android:background="@drawable/normal_gorunum_arka"
                            android:layout_below="@id/rel2"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/isim2"
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/beyaz"/>
                        </RelativeLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>